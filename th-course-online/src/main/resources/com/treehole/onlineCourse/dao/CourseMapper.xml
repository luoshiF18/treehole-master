<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.treehole.onlineCourse.dao.CourseMapper">
    <select id="findCourseListPage" resultType="com.treehole.framework.domain.onlineCourse.ext.CourseInfo"
            parameterType="com.treehole.framework.domain.onlineCourse.request.QueryPageRequest">
        SELECT
          course_base.*,
          (SELECT pic FROM course_pic WHERE courseid = course_base.id) pic
        FROM
          course_base
    </select>
</mapper>